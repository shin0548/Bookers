<header>
  <h1 class="top">Books</h1>
</header>

<main class="index-main">
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
  	  <td><%= book.body %></td>
  	  <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
  </table>

  <h2>New book</h2>
  <%= form_with model: @Book do |f| %>
  <div class="form-title">Title</div>
      <%= f.text_field :title %>
    <div class="form-body">Body</div>
      <%= f.text_area :body %><br>
    <div class="upload">
      <%= f.submit " Create Book" %>
    </div>
  <% end %>
</main>